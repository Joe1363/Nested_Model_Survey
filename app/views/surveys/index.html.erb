<h1 class="text-center white_text">Surveys</h1>
<div class="page_body text-center">
  <div class="inner">
    <% @surveys.each do |survey| %>
      <div class="article">
        <h3><%= link_to survey.name, survey %></h3>
        <%= pluralize(survey.questions.size, "Question") %>
      </div>
      <hr>
    <% end %>
  </div>

  <h4><%= link_to 'New Survey', new_survey_path, class: "underline" %></h4>
  <br>
</div>
